<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/indent_small"
    android:paddingRight="@dimen/indent_small">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/history_item_image_width"
        android:layout_height="@dimen/history_item_image_height"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_menu" />

    <ImageView
        android:id="@+id/color_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/history_item_image_height"
        android:layout_marginLeft="@dimen/indent_little"
        android:layout_marginTop="@dimen/indent_little"
        android:layout_marginBottom="@dimen/indent_little"
        android:layout_toRightOf="@+id/picture"
        tools:src="@color/blue" />
</RelativeLayout>