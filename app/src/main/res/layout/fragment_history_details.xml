<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/indent_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_details_picture_height"
                    android:scaleType="centerCrop" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/colors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/indent_small"
                    android:textSize="@dimen/history_details_title_text_size" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/indent_small"
            android:layout_marginLeft="@dimen/indent_small"
            android:layout_marginRight="@dimen/indent_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/indent_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_normal"
                    android:layout_marginLeft="@dimen/indent_normal"
                    android:text="@string/history_details_rgb"
                    android:textSize="@dimen/history_details_title_text_size"
                    android:textStyle="bold" />

                <ru.magflayer.spectrum.presentation.widget.TextSeekBarView
                    android:id="@+id/red"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_details_seek_bar_height"
                    android:layout_marginBottom="@dimen/indent_small" />

                <ru.magflayer.spectrum.presentation.widget.TextSeekBarView
                    android:id="@+id/green"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_details_seek_bar_height"
                    android:layout_marginBottom="@dimen/indent_small" />

                <ru.magflayer.spectrum.presentation.widget.TextSeekBarView
                    android:id="@+id/blue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_details_seek_bar_height"
                    android:layout_marginBottom="@dimen/indent_small" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/indent_small"
            android:layout_marginLeft="@dimen/indent_small"
            android:layout_marginRight="@dimen/indent_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/indent_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_normal"
                    android:layout_marginLeft="@dimen/indent_normal"
                    android:text="@string/history_details_cmyk"
                    android:textSize="@dimen/history_details_title_text_size"
                    android:textStyle="bold" />

                <ru.magflayer.spectrum.presentation.widget.TextSeekBarView
                    android:id="@+id/cyan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_details_seek_bar_height"
                    android:layout_marginBottom="@dimen/indent_small" />

                <ru.magflayer.spectrum.presentation.widget.TextSeekBarView
                    android:id="@+id/magenta"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_details_seek_bar_height"
                    android:layout_marginBottom="@dimen/indent_small" />

                <ru.magflayer.spectrum.presentation.widget.TextSeekBarView
                    android:id="@+id/yellow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_details_seek_bar_height"
                    android:layout_marginBottom="@dimen/indent_small" />

                <ru.magflayer.spectrum.presentation.widget.TextSeekBarView
                    android:id="@+id/key"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_details_seek_bar_height"
                    android:layout_marginBottom="@dimen/indent_small" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/indent_small"
            android:layout_marginLeft="@dimen/indent_small"
            android:layout_marginRight="@dimen/indent_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/indent_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_normal"
                    android:layout_marginLeft="@dimen/indent_normal"
                    android:text="@string/history_details_hsv"
                    android:textSize="@dimen/history_details_title_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/indent_normal"
                        android:layout_marginLeft="@dimen/indent_normal"
                        android:layout_weight="0.3"
                        android:textSize="@dimen/history_details_title_text_size"
                        tools:text="Hue: 12" />

                    <TextView
                        android:id="@+id/saturation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/indent_normal"
                        android:layout_marginLeft="@dimen/indent_normal"
                        android:layout_weight="0.3"
                        android:textSize="@dimen/history_details_title_text_size"
                        tools:text="Saturation: 90" />

                    <TextView
                        android:id="@+id/value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/indent_normal"
                        android:layout_marginLeft="@dimen/indent_normal"
                        android:layout_weight="0.3"
                        android:textSize="@dimen/history_details_title_text_size"
                        tools:text="Value: 60" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/indent_small"
            android:layout_marginLeft="@dimen/indent_small"
            android:layout_marginRight="@dimen/indent_small"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/indent_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/indent_normal"
                    android:layout_marginLeft="@dimen/indent_normal"
                    android:text="@string/history_details_hsv"
                    android:textSize="@dimen/history_details_title_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/color_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/indent_normal"
                        android:layout_marginLeft="@dimen/indent_normal"
                        android:layout_weight="0.3"
                        android:textSize="@dimen/history_details_title_text_size"
                        tools:text="X: 12" />

                    <TextView
                        android:id="@+id/color_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/indent_normal"
                        android:layout_marginLeft="@dimen/indent_normal"
                        android:layout_weight="0.3"
                        android:textSize="@dimen/history_details_title_text_size"
                        tools:text="Y: 90" />

                    <TextView
                        android:id="@+id/color_z"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/indent_normal"
                        android:layout_marginLeft="@dimen/indent_normal"
                        android:layout_weight="0.3"
                        android:textSize="@dimen/history_details_title_text_size"
                        tools:text="Z: 60" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>