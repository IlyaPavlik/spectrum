<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/indent_normal">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/color_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />

    <LinearLayout
        android:id="@+id/color_hex_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color_recycler"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/color_hex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/indent_small"
            android:layout_marginTop="@dimen/indent_small"
            android:gravity="center_vertical"
            android:textSize="20dp"
            tools:text="#000000" />

        <ImageView
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/indent_small"
            android:src="@drawable/ic_copy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color_hex_container">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="R: 160" />

            <TextView
                android:id="@+id/green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="G: 100" />

            <TextView
                android:id="@+id/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="B: 89" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/indent_large"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="H: 180" />

            <TextView
                android:id="@+id/saturation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="S: 100" />

            <TextView
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="V: 0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/indent_large"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cyan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="C: 180" />

            <TextView
                android:id="@+id/magenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="M: 100" />

            <TextView
                android:id="@+id/yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Y: 0" />

            <TextView
                android:id="@+id/key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="K: 0" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>